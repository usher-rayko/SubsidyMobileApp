<Notification_Screen>:
    name: "alert"
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Notifications"
            left_action_items: [['arrow-left', lambda x: app.go_back_home()]]
            right_action_items: [['refresh', lambda x: root.refresh_callback()]]
        BoxLayout:
            orientation: "vertical"
        
            MDScrollViewRefreshLayout:
                id: refresh_layout
                refresh_callback: root.refresh_callback
                root_layout: root
                MDGridLayout:
                    id: notification_grid
                    md_bg_color: .9,.9,.9,1
                    # orientation:'vertical'
                    cols: 1
                    padding: 10, 10
                    spacing: 10, 10
                    adaptive_height: True
                    row_default_height: 100

    