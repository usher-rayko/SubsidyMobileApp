<ViewRegisteredFarmers>:
    name: "view-farmers"
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: "Registered Farmers"
            left_action_items: [['arrow-left', lambda x: app.go_back_home()]]
            right_action_items: [['refresh', lambda x: root.refresh_callback()]] 
        Button:
            text: "Refresh"
            bold: True
            size_hint: .86, .07
            pos_hint: {"center_x": .5, "center_y": .9}
            color: 1, 1, 1, 1 
            on_release: root.refresh_callback()
        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(5)
            padding: dp(5)
            MDScrollViewRefreshLayout:
                id: refresh_layout
                refresh_callback: root.refresh_callback
                root_layout: root
                MDGridLayout:
                    id: show_farmers
                    cols: 1
                    padding: 5, 5
                    spacing: 5, 5
                    adaptive_height: True
                    row_default_height: 280 


                
                